<form class="form-signin mt-5" action="/signup" method="POST" style="width: 100%;">
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
  </div>
  <div class="row">
    <div class="col-6">
      <div class="form-label-group">
        <label for="inputName">Name</label>
        <input type="text" name="name" class="form-control" placeholder="Name" required autofocus>
      </div>
      <div class="form-label-group mt-2">
        <label for="inputEmail">Email</label>
        <input type="text" name="email" class="form-control" placeholder="Email" required autofocus>
      </div>
      <div class="form-label-group mt-2">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" class="form-control" placeholder="Password" required>
      </div>
      <div class="form-label-group mt-2">
        <label for="inputPasswordCheck">Password Check</label>
        <input type="password" name="passwordCheck" class="form-control" placeholder="Password Check" required>
      </div>
    </div>
    <div class="col-6">
      <div class="form-label-group">
        <label for="uploadAvatar">Avatar</label>
        </br>
        <input type="file" name="uploadAvatar">
      </div>
      <div class="form-group mt-3">
        <label for="introduction">Introduction</label>
        <textarea class="form-control rounded-0" name="introduction" rows="3"></textarea>
      </div>
    </div>
  </div>
  <br />
  <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
  <div class="text-center mb-4">
    <p><a href="/signin">Sign In</a></p>
  </div>
  <p class="mt-5 mb-3 text-muted text-center">Â© 2019</p>
</form>